# Agents Service - AI/ML operations microservice
FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.agents.txt .
RUN pip install --no-cache-dir -r requirements.agents.txt

# Copy only agents-specific files
COPY src/agents/ src/agents/
COPY src/config/ src/config/
COPY src/utils.py src/
COPY src/server/services/credential_service.py src/server/services/
COPY src/__init__.py src/

# Create necessary directory structure
RUN mkdir -p src/server/services
COPY src/server/services/__init__.py src/server/services/

# Set environment variables
ENV PYTHONPATH="/app/src:$PYTHONPATH"
ENV PYTHONUNBUFFERED=1

# Download sentence-transformers model during build to avoid runtime download
RUN python -c "from sentence_transformers import CrossEncoder; CrossEncoder('cross-encoder/ms-marco-MiniLM-L-6-v2')"

# Expose Agents port
EXPOSE 8052

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD python -c "import urllib.request; urllib.request.urlopen('http://localhost:8052/health')"

# Run the Agents service
CMD ["python", "-m", "uvicorn", "src.agents.server:app", "--host", "0.0.0.0", "--port", "8052"]