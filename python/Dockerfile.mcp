# MCP Service - Lightweight HTTP-based microservice  
FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.mcp.txt .
RUN pip install --no-cache-dir -r requirements.mcp.txt

# Create directory structure
RUN mkdir -p src/mcp/modules src/server/services src/config

# Copy only MCP-specific files
COPY src/mcp/ src/mcp/
COPY src/server/services/mcp_service_client.py src/server/services/
COPY src/server/services/__init__.py src/server/services/
COPY src/config/ src/config/
COPY src/utils.py src/
COPY src/server/services/credential_service.py src/server/services/
COPY src/__init__.py src/

# Set environment variables
ENV PYTHONPATH="/app/src:$PYTHONPATH"
ENV PYTHONUNBUFFERED=1

# Expose MCP port
EXPOSE 8051

# Run the MCP server
CMD ["python", "-m", "src.mcp.mcp_server"]