# MCP Server Configuration
HOST=0.0.0.0
PORT=8051
TRANSPORT=sse

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key
MODEL_CHOICE=gpt-4o-mini

# RAG Strategies (set to "true" or "false")
USE_CONTEXTUAL_EMBEDDINGS=true
USE_HYBRID_SEARCH=true
USE_AGENTIC_RAG=true
USE_RERANKING=true
USE_KNOWLEDGE_GRAPH=false

# Vector Database Choice - CHOOSE ONE
# Option 1: ChromaDB (local, recommended for development)
VECTOR_DB=chromadb
CHROMA_PERSIST_DIRECTORY=./data/chroma

# Option 2: Supabase (cloud, for production)
# VECTOR_DB=supabase
# SUPABASE_URL=your_supabase_project_url
# SUPABASE_SERVICE_KEY=your_supabase_service_key

# Neo4j Configuration (optional, for knowledge graph)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
